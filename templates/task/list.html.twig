{% extends 'base.html.twig' %}

{% block header_img %}{% endblock %}

{% block body %}
    <div class="title-add-task-button">
        <h1>Liste des tâches à effectuer</h1>
        <a href="{{ path('task_create') }}" class="btn btn-info pull-right">Créer une nouvelle tâche</a>
    </div>

    {% if tasks is not empty %}
        <table class="table table-responsive-md table-striped"  id="todo-task-table">
            <thead>
                <tr>
                    <th>Tâche</th>
                    <th>Auteur</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                {% for task in tasks %}
                    <tr>
                        <td>{{ task.title }}</td>
                        <td>{{ task.author }}</td>
                        <td>
                            <a href="{{ path('task_edit', { 'id' : task.id }) }}" class="btn btn-primary">Voir</a>
                            <a href="{{ path('task_toggle', { 'id' : task.id }) }}" class="btn btn-success">Marquer comme faite</a>
                            <a href="{{ path('task_delete', { 'id' : task.id }) }}" class="btn btn-warning">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div class="alert alert-warning" role="alert">
            Il n'y a pas encore de tâche enregistrée. <a href="{{ path('task_create') }}" class="btn btn-warning pull-right">Créer une tâche</a>
        </div>
    {% endif %}
{% endblock %}
